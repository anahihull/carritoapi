<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carritoapi.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,10"
            Spacing="15">

            <Label
                Text="Shopping Cart"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center"
                Margin="0,10,0,20"/>

            <!-- Cart Item -->
            <Frame BorderColor="Gray" Padding="10" Margin="0,0,0,10">
                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="15">
                    <Image
                        Grid.RowSpan="2"
                        Source="dotnet_bot.png"
                        HeightRequest="100"
                        WidthRequest="100"
                        Aspect="AspectFit"
                        SemanticProperties.Description="Product image" />

                    <Label
                        Grid.Column="1"
                        Text="Product Name"
                        FontSize="18"
                        FontAttributes="Bold"/>

                    <Label
                        x:Name="PriceLabel"
                        Grid.Column="1"
                        Grid.Row="1"
                        Text="$99.99"
                        TextColor="DarkGreen"
                        FontSize="16"/>

                    <VerticalStackLayout
                        Grid.Column="2"
                        Grid.RowSpan="2"
                        Spacing="5">
                        <Stepper 
                            x:Name="QuantityStepper"
                            Minimum="0"
                            Maximum="10"
                            Value="1"
                            ValueChanged="OnQuantityChanged"
                            HorizontalOptions="Center"/>
                        <Button 
                            x:Name="RemoveButton"
                            Text="Remove"
                            Clicked="OnRemoveClicked"
                            BackgroundColor="Red"
                            FontSize="12"
                            HeightRequest="30"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Total Section -->
            <Frame BorderColor="Gray" Padding="15" Margin="0,10,0,10">
                <VerticalStackLayout Spacing="10">
                    <Label 
                        Text="Cart Summary"
                        FontSize="20"
                        FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Subtotal:" />
                        <Label x:Name="SubtotalLabel" Grid.Column="1" Text="$99.99" FontAttributes="Bold"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Shipping:" />
                        <Label x:Name="ShippingLabel" Grid.Column="1" Text="$10.00" FontAttributes="Bold"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Total:" FontSize="18" FontAttributes="Bold"/>
                        <Label x:Name="TotalLabel" Grid.Column="1" Text="$109.99" FontSize="18" FontAttributes="Bold"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Button
                x:Name="CheckoutButton"
                Text="Proceed to Checkout"
                Clicked="OnCheckoutClicked"
                SemanticProperties.Hint="Proceeds to checkout with current cart items"
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>